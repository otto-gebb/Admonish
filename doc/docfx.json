{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/Admonish/Admonish.csproj"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Admonish",
      "_appTitle": "Admonish validation library",
      "_enableSearch": true,
      "_appLogoPath": "images/logo.svg",
      "pdf": false
    }
  }
}